<div class="languagepicker-inner">
    <div class="languagepicker-title">
        <div class="languagepicker-title-inner" role="heading" tabindex="0">
            {{{ displayTitle }}}
        </div>
    </div>
    <div class="languagepicker-body">
        <div class="languagepicker-body-inner">
            {{{a11y_text body }}}
        </div>
    </div>
    <div class="languagepicker-languages">
        <select class="languagepicker-language" name="languages">
        {{#each _languages}}
            <option value="{{_language}}">
                {{{ displayName }}}
            </option>
        {{/each}}
        </select>
    </div>
    <div class="languagepicker-roles">
        {{#each _roles}}
            <button class="languagepicker-role {{_role}}" value="{{_role}}">
                {{{ displayName }}}
            </button>
        {{/each}}
    </div>
</div>